<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundddd">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif-monospace"
        android:text="Exercises"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/ChestButton"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="101dp"
        android:elevation="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/chest2"
        android:visibility="visible"/>



    <ImageButton
        android:id="@+id/ShoulderButton"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ChestButton"
        android:layout_marginEnd="25dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/shoulders" />

    <ImageButton
        android:id="@+id/BackButton"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/ChestButton"
        android:layout_marginBottom="100dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/back" />

    <ImageButton
        android:id="@+id/ArmsButton"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_alignStart="@+id/ShoulderButton"
        android:layout_alignTop="@+id/BackButton"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/arms" />

    <ImageButton
        android:id="@+id/LegsButton"
        android:layout_width="250dp"
        android:layout_height="130dp"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/legs" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ShoulderButton"
        android:layout_marginStart="71dp"
        android:text="CHEST"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/ShoulderButton"
        android:layout_marginEnd="70dp"
        android:text="SHOULDERS"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="255dp"
        android:text="LEGS"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/BackButton"
        android:layout_marginTop="-100dp"
        android:text="BACK"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView2"
        android:layout_below="@+id/BackButton"
        android:layout_marginTop="-100dp"
        android:text="ARMS"
        android:textAlignment="center"
        android:textStyle="bold" />


</RelativeLayout>