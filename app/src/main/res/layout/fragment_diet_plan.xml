<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundddd">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif-monospace"
        android:text="Diet Plan"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="189dp"
        android:layout_height="117dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="72dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/breakfast" />

    <Button
        android:id="@+id/breakfastbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp"
        android:text="Breakfast"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="189dp"
        android:layout_height="117dp"
        android:layout_alignEnd="@+id/breakfastbutton"
        android:layout_alignParentTop="true"
        android:layout_marginTop="221dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/lunch" />

    <Button
        android:id="@+id/Lunchbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView6"
        android:layout_alignStart="@+id/imageView5"
        android:text="Lunch"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="189dp"
        android:layout_height="117dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="157dp"
        android:layout_marginStart="28dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/dinner" />

    <Button
        android:id="@+id/dinnerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView7"
        android:layout_alignEnd="@+id/breakfastbutton"
        android:text="Dinner"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="189dp"
        android:layout_height="117dp"
        android:layout_alignEnd="@+id/breakfastbutton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="23dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/snack" />

    <Button
        android:id="@+id/Snack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView8"
        android:layout_alignStart="@+id/imageView5"
        android:text="Snack"
        android:textSize="18sp"
        android:textStyle="bold" />


</RelativeLayout>