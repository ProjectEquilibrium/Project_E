<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundddd">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif-monospace"
        android:text="Allergies"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/Gluten"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="78dp"
        android:editable="false"
        android:ems="10"
        android:inputType="none"
        android:text="Coeliac disease/Gluten is autoimmune condition, that occurs in certain individuals that become sensitive to protein known as gluten which they consume within their diet. Gluten is found in food sources such as wheat, rye, barley etc, normally gluten is a nutritious, harmless protein part of the food everyone eats."
        android:textSize="13sp" />

    <EditText
        android:id="@+id/Nuts"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:layout_above="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:editable="false"
        android:ems="10"
        android:inputType="none"
        android:text="Nut allergy- is a condition where the bodyâ€™s immune system which normally fights infections starts reacting to food nutrients like protein present within the nut, furthermore, if a person eats something that contains a nut then the body thinks that the protein absorbed is harmful infections therefore the immune system starts to attack the protein which causes an allergic reaction that produces some weak or strong symptoms such as sneezing, coughing or more dangerous like trouble breathing or swelling and many more. "
        android:textSize="13sp" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="300dp"
        android:layout_height="115dp"
        android:layout_above="@+id/Gluten"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/gluten" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="300dp"
        android:layout_height="115dp"
        android:layout_above="@+id/Nuts"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="3dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/nuts" />

    <Button
        android:id="@+id/otherbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="Other Allergies " />


</RelativeLayout>